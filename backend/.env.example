# Database Configuration
# For Railway/production: Use DATABASE_URL (preferred)
DATABASE_URL=postgresql://user:password@host:port/database

# For local development: Use individual variables (fallback)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=e621_guessr
DB_USER=your_username
DB_PASSWORD=your_password_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Admin Configuration
ADMIN_KEY=your_secure_admin_key_here

# Production URLs (only needed in production)
FRONTEND_URL=https://frontend-url.example.app
BACKEND_URL=https://backend-url.example.app

# Optional: Rate limiting configuration (protects against abuse)
# Default: 300 requests per 15 minutes (allows ~3-5 rounds of gameplay)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300

# Optional: Scheduler configuration
SCHEDULER_ENABLED=true
TAG_REFRESH_INTERVAL=weekly
TAG_REFRESH_DAY=0
TAG_REFRESH_HOUR=6
TAG_REFRESH_MINUTE=21

# Copy this file to .env and fill in your actual credentials
# Never commit .env files to version control!